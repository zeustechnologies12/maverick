{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
        "@/components": ["./components"],
        "@/styles": ["./styles"],
    },
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
},
"include": [
  "**/*.ts",
  "**/*.tsx",
  ".expo/types/**/*.ts",
  "expo-env.d.ts"
],
"exclude": ["node_modules", ".expo", "dist"]
}
